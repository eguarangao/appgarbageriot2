<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.prediction.activity_camera_predictor">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgCapturePredic"
            android:layout_width="match_parent"
            android:layout_height="636dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txtInfo"
            android:layout_width="match_parent"
            android:layout_height="46dp"

            android:background="#00A64F"
            android:fontFamily="sans-serif-condensed-light"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="normal|bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="51dp"

        android:layout_marginTop="679dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout">

        <Button
            android:id="@+id/btnCapturar"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:minHeight="48dp"
            android:text="Galeria"
            app:icon="@drawable/ic_menu_gallery"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnCamaraPredice"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:minHeight="48dp"
            app:icon="@drawable/ic_menu_camera"
            app:iconPadding="5dp"
            app:iconSize="45dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btnIniciarPrediccion"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:minHeight="48dp"
            android:text="Predecir"
            app:icon="@android:drawable/ic_media_play"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>